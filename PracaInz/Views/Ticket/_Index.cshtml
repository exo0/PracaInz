@model PracaInz.ViewModels.TicketViewModels.TicketListViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inz M.Deska</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="row">
        <div class="col-6 float-right">
            <a class="btn btn-success" asp-controller="Ticket" asp-action="Add">Add ticket</a>
        </div>

    </div>
    @if (Model.Tickets.Count() > 0)
    {
        <table class="table pt-3 border border-info rounded">
            <thead>
                <tr>
                    <th>
                        <p>Id</p>
                    </th>
                    <th>
                        <p>Title</p>
                    </th>
                    <th>
                        <p>Message</p>
                    </th>
                    <th>
                        <p>Status</p>
                    </th>
                    <th>
                        <p>Created Time</p>

                </tr>
            </thead>
            <tbody>
                @foreach (var ticket1 in Model.Tickets)
                {
                    <tr>
                        <td>
                            @ticket1.Id
                        </td>
                        <td>
                            @ticket1.Title
                        </td>
                        <td>
                            @ticket1.Message
                        </td>
                        <td>
                            @ticket1.Status
                        </td>
                        <td>
                            @ticket1.CreateTime
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <div class="row">
            <div class="col-12">
                <h5 style="text-align:center">There are no tickets in the database</h5>
            </div>
            
        </div>

    }
</body>
</html>
