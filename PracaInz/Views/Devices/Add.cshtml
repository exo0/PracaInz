@model PracaInz.ViewModels.DevicesViewModels.NewDeviceViewModel

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Manufacturer" class="control-label">Manufacturer</label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model" class="control-label">Model</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SerialNumber" class="control-label">Serial number</label>
        <input asp-for="SerialNumber" class="form-control" />
        <span asp-validation-for="SerialNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeviceDescription" class="control-label">Description</label>
        <textarea asp-for="DeviceDescription" class="form-control"></textarea>
        <span asp-validation-for="DeviceDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Category</label>
        <select asp-for="CategoryId" class="form-control"
                asp-items="ViewBag.Categories"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">User</label>
        <select asp-for="UserId" class="form-control"
                asp-items="ViewBag.Users"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <button class="btn btn-block btn-primary" type="submit">Add</button>
</form>
