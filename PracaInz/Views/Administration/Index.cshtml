@model PracaInz.ViewModels.AdministrationViewModels.UserListViewModel

<div class="row">
    <div class="col-12">
        <a class="btn btn-success float-right" asp-controller="Administration" asp-action="Register">Add user</a>
    </div>
</div>

<table class="table border border-info rounded">
    <thead>
        <tr>
            <th>
                <p>Name</p>
            </th>
            <th>
                <p>Departament</p>
            </th>
            <th>
                <p>Buttons</p>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model.Users)
        {
            <tr>
                <td>
                    @user.FirstName, @user.LastName
                </td>
                <td>
                    @user.Departemnt
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Administration" asp-action="" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Administration" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

