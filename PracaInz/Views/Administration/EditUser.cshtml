@model PracaInz.ViewModels.AdministrationViewModels.EditUserViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDevice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Departemnt" class="control-label"></label>
                <input asp-for="Departemnt" class="form-control" />
            </div>
            @foreach (var device in Model.Devices)
            {

                @if (Model.Devices.Count() > 0)
                {
                    <table class="table border border-info rounded">
                        <thead>
                            <tr>
                                <th>
                                    <p>Model</p>
                                </th>
                                <th>
                                    <p>Serial Number</p>
                                </th>
                                <th>
                                    <p>Category</p>
                                </th>
                                <th>
                                    <p>Additional options</p>
                                </th>
                            </tr>

                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @device.Model
                                </td>
                                <td>
                                    <a asp-controller="Devices" asp-action="Edit" asp-route-id="@device.Id">@device.SerialNumber</a>
                                </td>
                                <td>
                                    @foreach (var cat in device.Categories)
                                    {
                                        @cat.Title
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-outline-danger" asp-controller="Devices" asp-action="Delete" asp-route-id="@device.Id">Usuń</a>
                                </td>
                            </tr>
                            
                        </tbody>
                    </table>

                }
                else
                {
                    <div class="row">
                        <div class="col-12">
                            <h5 style="text-align: center">Brak przypisanych komputerów</h5>
                        </div>
                    </div>

                }
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
